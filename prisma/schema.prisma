generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Ward {
  id       Int       @id @default(autoincrement())
  name     String
  patients Patient[]
}

model Patient {
  id       Int       @id @default(autoincrement())
  name     String
  ward     Ward      @relation(fields: [wardId], references: [id])
  wardId   Int
  sessions Session[]
}

model Activity {
  id       Int       @id @default(autoincrement())
  name     String
  sessions Session[]
}

model Session {
  id         Int       @id @default(autoincrement())
  patient    Patient   @relation(fields: [patientId], references: [id])
  patientId  Int
  activity   Activity  @relation(fields: [activityId], references: [id])
  activityId Int
  timeIn     DateTime
  timeOut    DateTime?
}
